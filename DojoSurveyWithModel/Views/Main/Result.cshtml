@model Survey

<div class="row justify-content-center">
    <div class="col-lg-8 border border-dark rounded justify-content-center m-4">
        <div class="col m-3">
            <h2 class="mb-4 text-center">Submitted Info</h2>
            <div class="row">
                <div class="col-lg-6 ml-5">
                    <h5>Your Name:</h5>
                </div>
                <div class="col-4">
                    <p>@Model.Name</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 ml-5">
                    <h5>Dojo Location:</h5>
                </div>
                <div class="col-4">
                    <p>@Model.Location</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 ml-5">
                    <h5>Favorite Language:</h5>
                </div>
                <div class="col-4">
                    <p>@Model.Language</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 ml-5">
                    <h5>Comment:</h5>
                </div>
                <div class="col-4">
                    <p>@Model.Comment</p>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-lg-3">
                    <a href="/" class="btn btn-primary text-right pl-4 pr-4">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>